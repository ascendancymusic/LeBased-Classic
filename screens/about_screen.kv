<AboutScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background_image_source
    BoxLayout:
        orientation: 'vertical'
        MDFlatButton:
            text: "< Back"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            md_bg_color: 0.173, 0.129, 0.365, 0.5
            size_hint: None, None
            size: 100, 50
            font_name: "Tex"
            pos_hint: {'x': 0, 'y': 1}
            on_release: root.manager.current = 'main'
            elevation: 100  # Adjust the shadow elevation here
            canvas.before:
                Color:
                    rgba: 0.173, 0.129, 0.365, 0.5
                BoxShadow:
                    pos: self.pos
                    size: self.size
                    offset: 0, -10
                    spread_radius: -10, -10
                    border_radius: 10, 10, 10, 10
                    blur_radius: 50 if self.state == "normal" else 75
        Label
            text: "About"
            font_size: '24sp'
            font_name: "TexBold"
            bold: True
            size_hint: 1, 0.1
            color: 1, 1, 1, 1
            pos_hint: {'x': 0, 'y': 1}
        Label:
            text: "Le Based v1 Alpha"
            font_size: '18sp'
            font_name: "Tex"
            size_hint: 1, 0.1
            color: 1, 1, 1, 1
            pos_hint: {'x': 0, 'y': 1}